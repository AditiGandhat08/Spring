<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	
	<hibernate-configuration>
	<session-factory>
	<property name="hbm2ddl.auto">update</property>
	<property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
	<property name="connection.driver_class">com.mysql.cj.jdbc.Driver</property>
	<property name="connection.url">jdbc:mysql://localhost:3306/BasicDB</property>
	<property name="connection.username">dbuser</property>
	<property name="connection.password">Squ@d123</property>
	
	<mapping resource="FoodPlaza.hbm.xml"/>
	
	<mapping class="AnnotationDemo.Customer"/>
	<mapping class="AnnotationDemo.Department"/>
	<mapping class="AnnotationDemo.Institute"/>
	</session-factory>
	</hibernate-configuration>